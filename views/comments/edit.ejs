<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h3 style="text-align: center">Edit Comment</h3>
        <div style="width: 40%; margin: 0 auto">
            <div class="well">
                <form action="/topics/<%= topic_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Update Comment</button>
                    </div>
                </form>
            </div>
            <a href="/topics/<%= topic_id %>">Back to Topic</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>