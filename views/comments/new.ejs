<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h3 style="text-align: center">Add new Comment to: <%= topic.topic %></h3>
        <div style="width: 40%; margin: 0 auto">
            <div class="well">
                <form action="/topics/<%= topic._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="Comment" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Create Comment</button>
                    </div>
                </form>
            </div>
            <a href="/topics/<%= topic._id %>">Back to Topic</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>