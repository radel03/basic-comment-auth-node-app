<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h3 style="text-align: center; font-weight: bold">Create a new Topic</h3>
        <div style="width: 40%; margin: 0 auto">
            <div class="well">
                <form action="/topics" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="topic" placeholder="Title" required>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="12" name="text" placeholder="Write here" required></textarea>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="Image url">
                    </div>
                    <div class="form-group">
                        <button style="font-weight: bold" class="btn btn-lg btn-primary btn-block">Create Topic</button>
                    </div>
                </form>
            </div>
            <a href="/topics">Back to Wall</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>